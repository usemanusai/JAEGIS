{
  "dashboard": {
    "id": null,
    "title": "N.L.D.S. - Natural Language Detection System Overview",
    "tags": ["nlds", "jaegis", "tier0"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(nlds_http_requests_total, instance)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*",
          "multi": true
        },
        {
          "name": "namespace",
          "type": "query", 
          "query": "label_values(nlds_http_requests_total, kubernetes_namespace)",
          "refresh": 1,
          "includeAll": false,
          "current": {
            "value": "nlds",
            "text": "nlds"
          }
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "N.L.D.S. System Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=\"nlds-api\"}",
            "legendFormat": "{{instance}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "mappings": [
              {"options": {"0": {"text": "DOWN"}}, "type": "value"},
              {"options": {"1": {"text": "UP"}}, "type": "value"}
            ]
          }
        }
      },
      {
        "id": 2,
        "title": "Request Rate (req/min)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(nlds_http_requests_total[1m])) * 60",
            "legendFormat": "Requests/min"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 800},
                {"color": "red", "value": 1000}
              ]
            },
            "unit": "reqps"
          }
        }
      },
      {
        "id": 3,
        "title": "Average Response Time",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(nlds_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.3},
                {"color": "red", "value": 0.5}
              ]
            },
            "unit": "s"
          }
        }
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "(sum(rate(nlds_http_requests_total{status=~\"5..\"}[5m])) / sum(rate(nlds_http_requests_total[5m]))) * 100",
            "legendFormat": "Error Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            },
            "unit": "percent"
          }
        }
      },
      {
        "id": 5,
        "title": "HTTP Request Rate by Status",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "sum by (status) (rate(nlds_http_requests_total[5m]))",
            "legendFormat": "{{status}}"
          }
        ],
        "yAxes": [
          {"label": "Requests/sec", "min": 0},
          {"show": false}
        ],
        "legend": {"show": true, "values": true, "current": true}
      },
      {
        "id": 6,
        "title": "Response Time Distribution",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(nlds_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          },
          {
            "expr": "histogram_quantile(0.95, rate(nlds_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.99, rate(nlds_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "99th percentile"
          }
        ],
        "yAxes": [
          {"label": "Response Time (s)", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 7,
        "title": "Confidence Score Distribution",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "sum by (score_range) (rate(nlds_confidence_score_total[5m]))",
            "legendFormat": "{{score_range}}"
          }
        ],
        "yAxes": [
          {"label": "Requests/sec", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 8,
        "title": "Processing Pipeline Performance",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(nlds_processing_duration_seconds_bucket{stage=\"processing\"}[5m]))",
            "legendFormat": "Processing"
          },
          {
            "expr": "histogram_quantile(0.95, rate(nlds_processing_duration_seconds_bucket{stage=\"analysis\"}[5m]))",
            "legendFormat": "Analysis"
          },
          {
            "expr": "histogram_quantile(0.95, rate(nlds_processing_duration_seconds_bucket{stage=\"translation\"}[5m]))",
            "legendFormat": "Translation"
          },
          {
            "expr": "histogram_quantile(0.95, rate(nlds_processing_duration_seconds_bucket{stage=\"integration\"}[5m]))",
            "legendFormat": "Integration"
          }
        ],
        "yAxes": [
          {"label": "Duration (s)", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 9,
        "title": "Resource Utilization",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{pod=~\"nlds-api-.*\"}[5m])) by (pod)",
            "legendFormat": "CPU - {{pod}}"
          },
          {
            "expr": "sum(container_memory_working_set_bytes{pod=~\"nlds-api-.*\"}) by (pod) / 1024 / 1024 / 1024",
            "legendFormat": "Memory (GB) - {{pod}}"
          }
        ],
        "yAxes": [
          {"label": "CPU Cores / Memory GB", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 10,
        "title": "Database Performance",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "pg_stat_activity_count{datname=\"nlds\"}",
            "legendFormat": "Active Connections"
          },
          {
            "expr": "rate(pg_stat_database_tup_inserted{datname=\"nlds\"}[5m])",
            "legendFormat": "Inserts/sec"
          },
          {
            "expr": "rate(pg_stat_database_tup_updated{datname=\"nlds\"}[5m])",
            "legendFormat": "Updates/sec"
          },
          {
            "expr": "rate(pg_stat_database_tup_deleted{datname=\"nlds\"}[5m])",
            "legendFormat": "Deletes/sec"
          }
        ],
        "yAxes": [
          {"label": "Count/Rate", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 11,
        "title": "Cache Performance",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "(rate(redis_keyspace_hits_total[5m]) / (rate(redis_keyspace_hits_total[5m]) + rate(redis_keyspace_misses_total[5m]))) * 100",
            "legendFormat": "Hit Rate %"
          },
          {
            "expr": "redis_connected_clients",
            "legendFormat": "Connected Clients"
          },
          {
            "expr": "redis_memory_used_bytes / 1024 / 1024",
            "legendFormat": "Memory Used (MB)"
          }
        ],
        "yAxes": [
          {"label": "Percentage / Count / MB", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 12,
        "title": "External API Health",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28},
        "targets": [
          {
            "expr": "probe_success{job=\"openrouter-api\"}",
            "legendFormat": "OpenRouter API"
          },
          {
            "expr": "probe_success{job=\"github-api\"}",
            "legendFormat": "GitHub API"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "mappings": [
              {"options": {"0": {"text": "DOWN"}}, "type": "value"},
              {"options": {"1": {"text": "UP"}}, "type": "value"}
            ]
          }
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "changes(nlds_build_info[1h]) > 0",
          "iconColor": "blue",
          "titleFormat": "Deployment",
          "textFormat": "New version deployed"
        }
      ]
    }
  }
}
